<!-- Search Form -->
<form action="/song/search" method="post">
  <div class="form-group m-3 p-5">
    <input type="text" class="form-control" id="textbox" name="textbox" placeholder="Search for a song">
    <div class="form-group">
      <input type="submit" value="submit" class="btn btn-secondary btn"/>
    </div>
  </div>
</form>

<!-- Search Form Error Message (the song name was logging as an empty array in the console log)-->

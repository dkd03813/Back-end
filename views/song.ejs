<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Include the Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

    <!-- Include the Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
      /* Dark Theme Styles */
      body {
        font-family: 'Roboto', sans-serif;
        background-color: #1e2022;
        color: #f8f9fa;
      }
      /* Dark Navbar */
      .navbar {
        background-color: #343a40;
      }
      .navbar .navbar-brand,
      .navbar .nav-link {
        color: #f8f9fa;
      }
      /* Dark Cards */
      .card {
        border: 1px solid #444;
        background-color: #343a40;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
        color: #f8f9fa;
      }
      /* Song Titles with warmer color */
      h5 {
        color: #fd7e14; /* Bootstrap's Orange */
        padding: 10px;
        border: 1px solid #fd7e14; /* Bootstrap's Orange */
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
      }
      /* Genre with cooler color */
      p {
        color: #17a2b8; /* Bootstrap's Cyan */
        padding: 5px;
        border: 1px dashed #17a2b8; /* Bootstrap's Cyan */
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
      }
      /* Rectangular Album Covers with rounded corners */
      .img-container {
        width: 100px;
        height: 100px;
        border-radius: 10%; /* Rounded corners */
        overflow: hidden; /* Hide the excess part of the image */
        margin: auto;
        margin-top: 1em;
      }
      .img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Cover the entire div */
      }
    </style>
  </head>
  <body>
    <%- include('partials/loginHeader.ejs') %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Sound Vault</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/song/favorites">Favorites</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>


<!-- Search Form -->
<form action="/song/search" method="post">
  <div class="form-group m-3 p-5">
    <input type="text" class="form-control" id="textbox" name="textbox" placeholder="Search for a song">
    <div class="form-group">
      <input type="submit" value="submit" class="btn btn-secondary btn"/>
    </div>
  </div>
</form>

<!-- Search Form Error Message (the song name was logging as an empty array in the console log)-->
<% if (songs.length === 0) { %>
  <div class="text-center error mb-4">No song matches.</div>
 <% } %>


<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="successModalLabel">Success</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Song successfully added to favorites!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<!-- Error Modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="errorModalLabel">Error</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Song already in favorites.
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>



    <!-- Song Cards -->
    <div class="container mt-5">
      <h1 class="text-center mb-4"><%= title %></h1>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% songs.forEach((song, index) => { %>
          <div class="col">
            <div class="card shadow-sm h-100">
              <div class="card-body">
                <h5 class="card-title mb-3"><%= song.dataValues.songName %></h5>
                <p class="card-text">Genre: <%= song.Album.genre %></p>
                <div class="img-container">
                  <img src="<%= song.Album.albumCover || 'https://placekitten.com/200/200' %>" class="card-img-top" alt="Album Cover">
                </div>
                <form class="favoriteForm mt-3">
                  <input name="songID"  type= "hidden" value="<%= song.dataValues.id %>">
                  <input type="hidden" name="profileID" value="<%= userProfileID %>"> <!-- Replace with the actual user's profile ID -->
                  <button type="button" class="btn favorite-button">
                    <i class="fas fa-heart"></i> Favorite
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
    
    <script>
      document.querySelectorAll('.favorite-button').forEach(item => {
        item.addEventListener('click', handleFavorite);
      });
    
      function handleFavorite(event) {
        event.preventDefault();
    
        const form = event.target.parentElement;
        const formData = new FormData(form);
        const songID = formData.get("songID");
        const profileID = formData.get("profileID");
        
        fetch('/song', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ songID, profileID }),
        })
        .then(response => response.json())
        .then(data => {
          if (data.error) {
            $('#errorModal').modal('show');
          } else {
            $('#successModal').modal('show');
          }
        })
        .catch((error) => {
          console.error('Error:', error);
        });
      }
    </script>
  </body>
</html>







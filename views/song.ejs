    <!-- Include the Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
      /* Dark Theme Styles */
      body {
        font-family: 'Roboto', sans-serif;
        background-color: #1e2022;
        color: #f8f9fa;
      }
      /* Dark Navbar */
      .navbar {
        background-color: #343a40;
      }
      .navbar .navbar-brand,
      .navbar .nav-link {
        color: #f8f9fa;
      }
      /* Dark Cards */
      .card {
        border: 1px solid #444;
        background-color: #343a40;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.2);
        color: #f8f9fa;
      }
      /* Song Titles with warmer color */
      h5 {
        color: #fd7e14; /* Bootstrap's Orange */
        padding: 10px;
        border: 1px solid #fd7e14; /* Bootstrap's Orange */
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
      }
      /* Genre with cooler color */
      p {
        color: #17a2b8; /* Bootstrap's Cyan */
        padding: 5px;
        border: 1px dashed #17a2b8; /* Bootstrap's Cyan */
        border-radius: 5px;
        text-align: center;
        font-weight: bold;
      }
      /* Rectangular Album Covers with rounded corners */
      .img-container {
        width: 100px;
        height: 100px;
        border-radius: 10%; /* Rounded corners */
        overflow: hidden; /* Hide the excess part of the image */
        margin: auto;
        margin-top: 1em;
      }
      .img-container img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Cover the entire div */
      }
    </style>
  </head>

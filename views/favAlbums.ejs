<!DOCTYPE html>
<html>
<head>
  <title>Favorite Albums</title>
  <!-- Include the Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

  <!-- Include the Font Awesome CSS for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

  <style>
    body {
      background-color: #2c2c2c;
      color: #fff;
      font-family: 'Arial', sans-serif;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding-top: 30px;
    }

    .card {
      border: none;
      background-color: #4d4d4d;
      margin-bottom: 20px;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
    }

    .card-img-top {
      height: 300px;
      object-fit: cover;
      width: 100%;
    }

    .card-title {
      font-weight: bold;
      color: #fff;
      text-align: center;
      text-transform: uppercase;
      margin-bottom: 0;
      font-size: 20px;
    }

    .card-body {
      padding: 15px;
    }

    .card-text {
      color: #ccc;
      font-size: 16px;
    }

    .list-group {
      margin-top: 15px;
      background-color: #4d4d4d;
    }

    .list-group-item {
      border: none;
      border-top: 1px solid #555;
      padding: 10px;
      color: #fff;
      font-size: 14px;
      background-color: transparent;
    }

    .list-group-item:first-child {
      border-top: none;
    }

    .heart-icon {
      margin-left: auto;
      color: #ccc;
      transition: color 0.3s;
      cursor: pointer;
    }

    .heart-icon.active {
      color: red;
    }

    .btn-primary {
      background-color: #ff6600;
      border: none;
    }

    .btn-primary:hover {
      background-color: #ff5722;
    }

    /* Updated styles for the expand-btn */
    .expand-btn {
      cursor: pointer;
      color: #ff6600;
      font-weight: bold;
      text-align: center;
      padding: 10px;
      background-color: #4d4d4d;
      border: 2px solid #ff6600;
      border-radius: 5px;
      max-width: 150px;
      margin: 10px auto;
      transition: background-color 0.2s ease, color 0.2s ease;
    }

    /* Add new styles for the expanded button */
    .expand-btn.expanded {
      background-color: #ff6600;
      color: #fff;
    }

    /* New style for the tracklist button container */
    .tracklist-button-container {
      text-align: center;
    }

    /* New styles for the tracklist */
    .track-list {
      display: none;
      flex-wrap: wrap;
      margin-top: 15px;
      background-color: #4d4d4d;
      padding: 10px;
      border-radius: 5px;
    }

    .track-list.show {
      display: flex;
    }

    .track-list .list-group-item {
      flex-basis: 33.33%;
      margin: 10px 0;
    }

    @media (max-width: 575.98px) {
      .track-list .list-group-item {
        flex-basis: 100%;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/header.ejs') %>
  <% console.log(favoriteAlbums); %>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Favorite Albums</h1>
    <% favoriteAlbums.forEach(album => { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <div class="d-flex justify-content-center align-items-center" style="height: 300px; overflow: hidden;">
              <img src="<%= album.dataValues.albumCover || 'https://placekitten.com/200/200' %>" class="card-img-top" alt="Album Cover">
            </div>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title text-center"><%= album.dataValues.albumName %></h5>
              <p class="card-text text-center">Release Year: <%= album.dataValues.albumDate %></p>
              <!-- Updated the container div for the tracklist button -->
              <div class="tracklist-button-container">
                <!-- Added the class "expand-btn" to the button -->
                <div class="expand-btn" onclick="toggleTrackList(this)">View Tracklist</div>
              </div>
              <div class="track-list">
                <div class="list-group">
                  <% const trackList = album.dataValues.songList.split(',').map(track => track.trim()); %>
                  <% let trackCount = 1; %>
                  <% for (let i = 0; i < trackList.length; i += 3) { %>
                    <div class="list-group-item">
                      <div class="row">
                        <% for (let j = i; j < Math.min(i + 3, trackList.length); j++) { %>
                          <div class="col-md-4"><%= trackCount %>. <%= trackList[j] %></div>
                          <% trackCount++; %>
                        <% } %>
                      </div>
                    </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Include the Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <script>
    function toggleTrackList(button) {
      const trackList = button.parentElement.nextElementSibling;
      trackList.classList.toggle('show');
      button.classList.toggle('expanded');

      // Change the button text when expanded/collapsed
      const buttonText = button.innerText;
      button.innerText = buttonText === 'View Tracklist' ? 'Hide Tracklist' : 'View Tracklist';
    }
  </script>
</body>
</html>

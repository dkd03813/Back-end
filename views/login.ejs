<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <%- include('./partials/bootstrap') %>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <div class="container">
      <h1><%= title %></h1>

      <% if (typeof error !== 'undefined') { %>
      <h2 h2 class="error" style="color: red"><%= error %></h2>
      <h4>Would you like to create an account?</h4>
      <a href="http://localhost:3000/profiles/register">
        <button type="button" class="btn btn-primary">Register Account</button>
      </a>
      <a href="http://localhost:3000/profiles/login">
        <button type="button" class="btn btn-secondary">Try Login Again</button>
      </a>

      <%} else { %>
      <!-- Make a login form that allows a user to put in username and password -->
      <form action="/profiles/login" method="post">
        <div class="formgroup">
          <label for="username">Username:</label><br />
          <input type="text" id="username" name="username" /> <br />
        </div>
        <div class="formgroup">
          <label for="password">Password:</label><br />
          <input type="password" id="password" name="password" /> <br />
        </div>
        <input type="submit" value="submit" />
      </form>
      <% } %>
    </div>
  </body>
</html>
<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <!-- Include the Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

  <!-- Include the Font Awesome CSS for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/stylesheets/style.css" />
<!-- previous color i used: #312d2a  -->
  <style>
    body {
      background-color: #212529;
      color: #fff;
      font-family: 'Arial', sans-serif;
    }

    .jumbotron {
      background-color: #212529;
      color: #fff;
      padding: 4rem 2rem;
      text-align: center;
    }

    .jumbotron h1 {
      font-size: 4rem;

      color: #e6ac82;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .jumbotron p {

      font-size: 1.5rem;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .btn-lg {
      font-size: 1.25rem;
      padding: 12px 40px;
    }

    .card {
      background-color: #444;
      color: #fff;
      border: none;
    }

    .card .card-title {
      color: #bda4ea;
      margin-bottom: 10px;
    }

    .card .card-text {
      color: #ccc;
    }

    .card .fa-4x {
      color: #ffffff;

    }
  </style>
</head>
<body>
  <%- include('partials/header.ejs') %>

  <!--  Title idea from AI: "SoundVault: Your Digital Album Sanctuary" -->

  <!-- <img src="https://i.imgur.com/3aaULB7.png" alt="record player" style: ="width=10px height: 10px;"> -->

<!-- Peach color I used before: #e6ac82 -->
  <div class="jumbotron jumbotron-fluid text-center mb-0">
    <div class="container">
      <h1 class="display-4"style= "color: #dfdce6;">Welcome to <span style="color: #bda4ea;"><%= title %></span></h1>
      <p class="lead p-3">Discover and save your favorite music.</p>
      <div class="d-flex justify-content-center">
        <div class="ul p-3" style="list-style: none;">
        <li class="mb-3"><a href="/profiles" class="btn btn-lg btn-secondary mr-2">Create An Account</a> </li>
        <li><a href="/profiles/login" class="btn btn-lg btn-secondary">Log In</a></li>
      </div>
      </div>
    </div>
  </div>


  <div class="container mt-3">
    <div class="row">
      <div class="col-md-4">
        <div class="card mb-3" id="songCardHomePage">
          <div class="card-body text-center">
            <i class="fas fa-music fa-4x mb-3"></i>
            <h5 class="card-title">Discover Music</h5>
            <p class="card-text">Explore a vast collection of music from various genres and artists.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-3" id="createProfileCardHomePage">
          <div class="card-body text-center">
            <i class="fas fa-user fa-4x mb-3"></i>
            <h5 class="card-title">Create Your Profile</h5>
            <p class="card-text">Sign up and create your personalized SoundVault to keep track of your favorites.</p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-3" id="saveFavCardHomePage">
          <div class="card-body text-center">
            <i class="fas fa-heart fa-4x mb-3"></i>
            <h5 class="card-title">Save Favorites</h5>
            <p class="card-text">Add your favorite songs, artists, and albums to your profile for easy access.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /* Clickable cards on the homepage to the right routes */ -->
<script>
const songCardHomePage = document.getElementById('songCardHomePage');

songCardHomePage.style.cursor = 'pointer';
songCardHomePage.onclick = function() {
  location.href = "/song";
}

const createProfileCardHomePage = document.getElementById('createProfileCardHomePage');

createProfileCardHomePage.style.cursor = 'pointer';
createProfileCardHomePage.onclick = function() {
  location.href = "/profiles/login";
}

const saveFavCardHomePage = document.getElementById('saveFavCardHomePage');

saveFavCardHomePage.style.cursor = 'pointer';
saveFavCardHomePage.onclick = function() {
  location.href = "/profiles/login";
}
</script>

  <!-- Include the Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

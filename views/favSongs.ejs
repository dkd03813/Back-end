<!DOCTYPE html>
<html>
<head>
  <title>Favorite Songs</title>
  <!-- Include the Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

  <!-- Include the Font Awesome CSS for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/stylesheets/style.css" />

  <style>
    body {
      background-color: #212529;
      color: #fff;
      font-family: 'Arial', sans-serif;
    }

    .jumbotron {
      background-color: #212529;
      color: #fff;
      padding: 4rem 2rem;
      text-align: center;
    }

    .jumbotron h1 {
      font-size: 4rem;
      color: #e6ac82;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .jumbotron p {
      font-size: 1.5rem;
      text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .card {
      background-color: #444;
      color: #fff;
      border: none;
    }

    .card .card-title {
      color: #bda4ea;
      margin-bottom: 10px;
      text-align: center;
    }

    .card .card-text {
      color: #ccc;
      text-align: center;
    }

    .card .fa-play {
      color: #ffffff;
    }

    .btn-primary {
      background-color: #bda4ea;
      border: none;
      width: 100%;
    }

    .btn-primary:hover {
      background-color: #a48fd1;
    }
  </style>
</head>
<body>
  <%- include('partials/loginHeader.ejs') %>
  
  <div class="container mt-5">
    <h1 class="text-center mb-4">Favorite Songs</h1>
    <% favoriteSongs.forEach(song => { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <div class="d-flex justify-content-center align-items-center" style="height: 300px; overflow: hidden;">
              <img src="<%= song.Album.albumCover || 'https://placekitten.com/200/200' %>" class="card-img-top" alt="Album Cover">
            </div>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= song.dataValues.songName %></h5>
              <p class="card-text"><%= song.Album.artistName %> - <%= song.Album.albumName %></p>
              <button type="button" class="btn btn-primary"><i class="fas fa-play"></i> Play Song</button>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Include the Bootstrap JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>


<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Include the Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

    <!-- Include the Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    <style>
      .card-title {
        font-weight: bold;
        color: #333;
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 0;
      }

      .heart-icon {
        color: #ccc;
        transition: color 0.3s;
        cursor: pointer;
      }

      .heart-icon.active {
        color: red;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">My Music App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/profiles">Favorites</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Album Cards -->
    <div class="container mt-5">
      <h1 class="text-center mb-4"><%= title %></h1>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% albums.forEach(album => { %>
          <div class="col">
            <div class="card shadow-sm h-100">
              <img src="<%= album.dataValues.albumCover || 'https://placekitten.com/200/200' %>" class="card-img-top" alt="Album Cover">
              <div class="card-body">
                <h5 class="card-title mb-3"><%= album.dataValues.albumName %></h5>
                <p class="card-text">Release Year: <%= album.dataValues.albumDate %></p>
                <ul class="list-group">
                  <% const trackList = album.songList.split(',').map(track => track.trim()); %>
                  <% trackList.forEach(track => { %>
                    <li class="list-group-item">
                      <%= track %>
                      <i class="fas fa-heart heart-icon" data-track="<%= track %>" onclick="handleFavorite(this)"></i>
                    </li>
                  <% }) %>
                </ul>
                <button class="btn btn-primary mt-3"><i class="fas fa-heart"></i> Favorite</button>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Include the Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Include your custom JavaScript -->
    <script>
      // Function to handle the favorite button click
      function handleFavorite(element) {
        element.classList.toggle('active');
      }
    </script>
  </body>
</html>




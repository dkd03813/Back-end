<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Include the Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" />

    <!-- Include the Font Awesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

   

    <style>
      .card-title {
        font-weight: bold;
        color: #333;
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 0;
      }

      .heart-icon {
        color: #ccc;
        transition: color 0.3s;
        cursor: pointer;
      }

      .heart-icon.active {
        color: red;
      }
    </style>
  </head>
  <body>
    <%- include('partials/header.ejs') %>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">My Music App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/album/favorites">Favorites</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- Album Cards -->
    <div class="container mt-5">
      <h1 class="text-center mb-4"><%= title %></h1>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% albums.forEach(album => { %>
          <div class="col">
            <div class="card shadow-sm h-100">
              <img src="<%= album.dataValues.albumCover || 'https://placekitten.com/200/200' %>" class="card-img-top" alt="Album Cover">
              <div class="card-body">
                <h5 class="card-title mb-3"><%= album.dataValues.albumName %></h5>
                <p class="card-text">Release Year: <%= album.dataValues.albumDate %></p>
                <ul class="list-group">
                  <% const trackList = album.songList.split(',').map(track => track.trim()); %>
                  <% trackList.forEach(track => { %>
                    <li class="list-group-item">
                      <%= track %>
                      <i class="fas fa-heart heart-icon" onclick="handleFavorite(this)"></i>
                    </li>
                  <% }) %>
                </ul>
                <form action="/album/favorites" method="POST">
                  <input name="albumID"  type= "hidden" value="<%= album.dataValues.id %>">
                  <input type="hidden" name="profileID" value="1"> <!-- Replace with the actual user's profile ID -->
                  <button type="submit" class="btn btn-primary mt-3">
                    <i class="fas fa-heart"></i> Favorite
                  </button>
                </form>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>

    <!-- Include the Bootstrap JS -->
    <script>
      // Function to handle the favorite button click
      async function handleFavorite(element, albumID, profileID) {
        element.classList.toggle('active');

        const form = document.getElementById(`favoriteForm${albumID}`);
        //form has a hidden field that looks for the id of the profile id of the user that is currently logged into the site
        form.profileID.value = profileID;
        
        try {
          const response = await fetch(form.action, {
            method: 'POST',
            body: new FormData(form),
          });

          if (response.ok) {
            // Success, show a success popup or message
            alert('Album added to favorites successfully!');
          } else if (response.status === 409) {
            // Album already in favorites, show an error popup or message
            alert('Album already in favorites.');
          } else {
            // Error occurred, show an error popup or message
            alert('Error while adding album to favorites. Please try again later.');
          }
        } catch (error) {
          console.error('Error while adding album to favorites:', error);
          // Show an error popup or message
          alert('Error while adding album to favorites. Please try again later.');
        }
      }
    </script>


</body>
</html>



